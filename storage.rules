rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow access to the 'workouts' folder
    match /workouts/{userId}/{allPaths=**} {
      // User can write their own files
      allow write: if request.auth != null && request.auth.uid == userId;
      // Anyone can read (for social feed visibility)
      allow read: if true;
    }
  }
}
